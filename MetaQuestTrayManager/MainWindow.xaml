<Window
    x:Class="MetaQuestTrayManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MetaQuest Tray Manager"
    Width="800"
    Height="450">
    <Grid>
        <Label
            x:Name="lbl_CurrentSetting"
            Margin="10,10,0,0"
            Content="Current Setting: " />
        <Label
            x:Name="lbl_SteamVR_BetaStatus"
            Margin="10,40,0,0"
            Content="SteamVR Beta Status: " />
        <Label
            x:Name="lbl_SteamVR_Status"
            Margin="10,70,0,0"
            Content="SteamVR Status: " />
        <Label
            x:Name="lbl_DesktopPlusStatus"
            Margin="10,100,0,0"
            Content="Desktop+ Status: " />

        <Button
            x:Name="btn_Diagnostics"
            Width="150"
            Height="30"
            Margin="10,150,0,0"
            Content="Run Diagnostics" />
        <Button
            x:Name="btn_OpenSettings"
            Width="150"
            Height="30"
            Margin="10,190,0,0"
            Content="Open Settings" />
    </Grid>
</Window>
